<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>:root{ --bs-primary:#003E7E; --bs-primary-rgb:0,62,126; }</style>
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">ADS-SJSU</a>
      <div class="ms-auto">
        <a class="btn btn-outline-light" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <% if (alert) { %>
      <div class="alert alert-<%= alert.type %> mb-4"><%= alert.text %></div>
    <% } %>

    <h1 class="h2 mb-2">Dashboard</h1>
    <p class="mb-4">Hello, <strong><%= (user?.name || user?.username) %></strong>! Youâ€™re authenticated.</p>

    <!-- My Courses (first) -->
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="h5 mb-0">My Courses</h2>
    </div>
    <div class="row g-4 mb-5">
      <% (courses || []).forEach(c => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <div class="ratio ratio-16x9 rounded-top <%= c.bgClass %>"></div>
            <div class="card-body">
              <h6 class="text-muted mb-1"><%= c.term %></h6>
              <h5 class="card-title"><%= c.title %></h5>
              <div class="d-flex gap-2 mt-3">
                <a href="<%= c.url %>" class="btn btn-primary btn-sm">Open</a>
                <a href="#" class="btn btn-outline-secondary btn-sm disabled" tabindex="-1" aria-disabled="true">Details</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Session Snapshot -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h5 mb-3">Session Snapshot</h2>
        <div class="table-responsive">
          <table class="table table-bordered align-middle mb-0">
            <tbody>
              <tr>
                <th scope="row" class="w-25">Username</th>
                <td><%= user?.username || 'N/A' %></td>
              </tr>
              <tr>
                <th scope="row">User ID</th>
                <td><%= user?.id || 'N/A' %></td>
              </tr>
              <tr>
                <th scope="row">Session ID</th>
                <td><%= sessionId || 'N/A' %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="mt-3">
          <a href="/" class="link-primary me-2">Home</a> |
          <a href="/logout" class="link-danger ms-2">Logout</a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
